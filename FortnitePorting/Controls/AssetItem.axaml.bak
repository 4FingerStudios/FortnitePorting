<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:FortnitePorting.Controls"
             xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FortnitePorting.Controls.AssetItem" Padding="8">
    <StackPanel Width="{Binding DisplayWidth, RelativeSource={RelativeSource AncestorType=controls:AssetItem}}" 
                ToolTip.Tip="{Binding CreationData.Object.Name, RelativeSource={RelativeSource AncestorType=controls:AssetItem}}">
        <Grid>
            <ui:FABorder Width="{Binding DisplayWidth, RelativeSource={RelativeSource AncestorType=controls:AssetItem}}" 
                         Height="{Binding DisplayHeight, RelativeSource={RelativeSource AncestorType=controls:AssetItem}}"/>
            <ui:FABorder Width="{Binding DisplayWidth, RelativeSource={RelativeSource AncestorType=controls:AssetItem}}" 
                         Height="{Binding DisplayHeight, RelativeSource={RelativeSource AncestorType=controls:AssetItem}}"
                         RenderOptions.BitmapInterpolationMode="MediumQuality">
                <ui:FABorder.Background>
                    <ImageBrush Stretch="UniformToFill" Source="{Binding DisplayImage, RelativeSource={RelativeSource AncestorType=controls:AssetItem}}" />
                </ui:FABorder.Background>
            </ui:FABorder>
        </Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" TextTrimming="CharacterEllipsis"
                   Text="{Binding CreationData.DisplayName, RelativeSource={RelativeSource AncestorType=controls:AssetItem}, Converter={StaticResource TitleCaseString}}" />
    </StackPanel>
</UserControl>
